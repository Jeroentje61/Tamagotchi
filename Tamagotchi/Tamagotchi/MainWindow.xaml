<Window x:Class="Tamagotchi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="260" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="50" HorizontalAlignment="Center">Tamagotchi</TextBlock>
            <Image Source="Resources\Boredom.png" Height="100"></Image>
            <WrapPanel Margin="7,10,7,0">
                <Button Height="25" Width="50" Margin="4,0,0,0" Name="Eat">Eat</Button>
                <Button Height="25" Width="50" Margin="4,0,0,0" Name="Sleep">Sleep</Button>
                <Button Height="25" Width="50" Margin="4,0,0,0" Name="Play">Play</Button>
                <Button Height="25" Width="50" Margin="4,0,0,0" Name="Workout">Workout</Button>
                <Button Height="25" Width="50"  Margin="4,0,0,0" Name="Hug">Hug</Button>
            </WrapPanel>
        </StackPanel>

    </Grid>
</Window>
